@section Scripts{
    <script type="text/javascript">
        $(function () {

            $("#btnLogin").click(function () {
                var isValid = checkConfirm();
                if (isValid) {
                    var data = {
                        __RequestVerificationToken: $("input[name=__RequestVerificationToken]").val(),
                        code: $("#emailcode").val(),
                        newpassword: $("#newpassword").val()
                    };
                    $.post("/Login/ChangeConfirm", data, function (result) {
                        if (result.state === "success") {
                            alert("提交成功");
                            location.href = result.data;
                        }
                        else {
                            alert(result.message);
                        }
                    },"json");
                }
            });

            $("#submitForm").keydown(function (e) {
                if (e.keyCode === 13) {
                    $("#btnLogin").trigger("click"); //处理事件
                    return false;
                }
            });



        });




        // 登陆时的客户端校验
        function checkConfirm() {
            // 用户名 空校验
            var oCode = $("#emailcode");
            if (oCode) {
                if (oCode.val() === "") {
                    alert("请输入邮箱验证码！");
                    oCode.focus();
                    return false;
                }
            }

            // 密码 空校验 长度校验
            var oPwd = $("#password");
            if (oPwd) {
                if (oPwd.value === "") {
                    alert("请输入密码！");
                    oPwd.focus();
                    return false;
                }
                else if (oPwd.val().length < 6) {
                    alert("密码长度不能小于6位！");
                    oPwd.focus();
                    return false;
                }
            }

            // 密码 空校验 长度校验
            var onewPwd = $("#newpassword");
            if (onewPwd) {
                if (onewPwd.value === "") {
                    alert("请再次输入密码！");
                    onewPwd.focus();
                    return false;
                }
                else if (onewPwd.val().length < 6) {
                    alert("再次密码长度不能小于6位！");
                    onewPwd.focus();
                    return false;
                }

                if (onewPwd.val() !== oPwd.val()) {
                    alert("两次输入密码不一致！");
                    onewPwd.focus();
                    return false;
                }
            }


            return true;
        }



    </script>

}
